<%- include head %>

<div style="width:1024px;margin:1em auto;">
    <div id='main' style="border:1px solid green;width:1024px;">
        <form name='newcourse' id='newcourse' method='post' action='/teacher/newCourse' enctype="multipart/form-data">
            <table class="table">
               <caption style='text-align: center'>创建课程</caption>
               <tbody>
                  <tr>
                     <td align='right'>课程名称:</td>
                     <td><input type="text" class="form-control"  name='title' placeholder="请输入课程名称名称"></td>
                  </tr>
                  <tr>
                    <td align='right'>课程分类:</td>
                    <td>
                      <select name='type'>
                          <option value='1'>nodejs</option>
                          <option value='2'>java</option>
                          <option value='3'>C++</option>
                          <option value='4'>PHP</option>
                          <option value='5'>.net</option>
                          <option value='6'>.html</option>
                      </select>
                    </td>
                  </tr>
                  <tr>
                    <td align='right'>课程Logo:</td>
                    <td><input type="file" class="form-control"  name='clogo'></td>
                  </tr>
                  <tr>
                    <td align='right'>课程简介:</td>
                    <td><textarea name='brief' cols='90' rows='9'></textarea></td>
                  </tr>
                  <tr>
                    <td align='center' colspan='2'>
                       <input type="submit" class="btn btn-success"  value="创建新课程"/> &nbsp;
                       <a href='/teacher/course'><input type="button" class="btn btn-success"  value="返回"/></a>
                    </td>
                  </tr>
               </tbody>
            </table>
        </form>
    </div>
</div>

  </body>
</html>
