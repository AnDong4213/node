                   <tr>
                       <th>发送人</th>
                       <th>内容</th>
                       <th>时间</th>
                       <th>操作</th>
                   </tr>
                   <% rsadmin.forEach(function (item) { %>
                       <% date = item.sendtime %>
                       <tr style="text-align: center">
                           <td><%- item.sendname %></td>
                           <td><%- item.message %></td>
                           <td>
                               <%- date.getFullYear() %>-<%- date.getMonth()+1 %>-<%- date.getDate() %>
